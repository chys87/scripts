# Include this file from ~/.gitconfig:
# [include]
#     path = /path/to/this/file
[color]
	ui = auto
[core]
	pager = less -+$LESS -isR
	quotepath = off
[gc]
	auto = 16384
	autopacklimit = 128
	autoDetach = false
[alias]
	br = branch
	ci = commit
	co = checkout
	di = diff
	pl = pull
	plr = pull --rebase
	ps = push
	st = status
	fgrep = grep -F
	egrep = grep -E
	pgrep = grep -P
[fetch]
	prune = true
[merge]
	defaultToUpstream = true
[push]
	default = upstream
