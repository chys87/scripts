[color]
	ui = auto
[core]
	pager = less -+$LESS -isR
	quotepath = off
[pager]
	branch =
	tag =
[gc]
	autoDetach = false
[alias]
	a = add
	br = branch
	ci = commit
	co = checkout
	di = diff
	pl = pull
	plr = pull --rebase
	ps = push
	r = rebase
	st = status
	fgrep = grep -F
	egrep = grep -E
	pgrep = grep -P
	wc = whatchanged
[fetch]
	prune = true
[merge]
	defaultToUpstream = true
[push]
	default = upstream
[pull]
	rebase = false
[credential]
	helper = cache --timeout=864000
